generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  REVIEWER
  CANDIDATE
  USER
}

model User {
  id         String       @id @default(cuid())
  createdAt  DateTime?    @default(now())
  updatedAt  DateTime?    @updatedAt
  email      String       @unique
  username   String?
  firstname  String?
  lastname   String?
  password   String
  role       Role         @default(USER)
  challenges Challenges[] 
}

model Challenges {
  id        String   @id @default(cuid())
  published Boolean
  title     String
  authorId  String
  owner     User     @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tags      Tag[]
}

model Tag {
  id         Int       @id @default(autoincrement())
  content    String
  area       String
  Challenges Challenges[]
}

